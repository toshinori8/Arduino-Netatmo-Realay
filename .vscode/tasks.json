{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "AddStringToSave",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "echo '#include <Arduino.h> const char webpage[] PROGMEM = R\"rawliteral(' | cat - ${file} - ')rawliteral\";' > '${fileDirname}/${fileBasenameNoExtension}_modified${fileExtname}'"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [],
        "dependsOn": ["backupFile"]
      },
      {
        "label": "backupFile",
        "type": "shell",
        "command": "cp",
        "args": ["${file}", "${fileDirname}/webpage_h"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }

  